.homePage {
  width: 95%;
  margin: 0 auto;
}
.leaderboard {
  position: relative;
  width: 100%;
  margin-bottom: 30rpx;
  height: 240rpx;
}
.leaderboard image {
  float: left;
  width: 230rpx;
  height: 240rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.leaderboard-name {
  font-size: 30rpx;
  margin-top: 30rpx;
}
.detail {
  width: 90%;
  color: #6a6a6a;
  font-size: 28rpx;
  padding-top: 20rpx;
}
.songTitle {
  margin: 20rpx 0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.btnSearch {
  width: 95%;
  height: 80rpx;
  margin: 160rpx 0 30rpx 0;
  padding-left: 20rpx;
  border: 1rpx solid #cccccc;
  border-radius: 40rpx;
}