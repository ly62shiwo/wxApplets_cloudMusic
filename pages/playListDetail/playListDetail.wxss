page {
  background-color: rgb(241, 236, 236);
}
.leaderboard {
  width: 100%;
}
.navigation {
  width: 100%;
  box-sizing:border-box;
  height: 500rpx;
  padding: 30rpx 20rpx 0 20rpx;
}
.coverImgUrl {
  float: left;
  width: 290rpx;
  height: 290rpx;
  border-radius: 30rpx;
  margin-right: 30rpx;
}
.navigationName {
  color: rgb(97, 96, 96);
  font-size: 40rpx;
}
.description {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: rgb(97, 96, 96);
  font-size: 26rpx;
}

.cloudMusic {
  display: flex;
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 30rpx 0;
}
.cloudMusic image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.cloudMusic text {
  color: rgb(97, 96, 96);
}
.share {
  margin-top: 70rpx;
}
/* 歌曲列表 */
.playMusic {
  width: 100%;
  background-color: #ffffff !important;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  background: no-repeat;
}
.playAll {
  margin-left: 30rpx;
  font-size: 40rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.songList {
  position: relative;
  width: 100%;
  margin: 40rpx;
}
.songName {
}
.singerName {
  font-size: 25rpx;
  color: #cccccc;
}
.songListPalyIcon {
  position: absolute;
  top: 10rpx;
  right: 70rpx;
}
